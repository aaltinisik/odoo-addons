<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_transfer_split_by_pack_form" model="ir.ui.view">
            <field name="name">stock_transfer_split_by_pack.wizard_form</field>
            <field name="model">stock.transfer.split_by_pack</field>
            <field name="arch" type="xml">
                <form string="Split Line">
                    <group name="main">
                        <field name="pack_qty"/>
                        <field name="create_pack"/>
                    </group>
                    <footer>
                        <button name="split_by_pack" type="object" string="Split Line" class="oe_highlight"/>
                        or
                        <button name="cancel" type="object" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="stock_transfer_split_by_pack_action" model="ir.actions.act_window">
            <field name="name">Split by Configurable Quantity</field>
            <field name="res_model">stock.transfer.split_by_pack</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</openerp>