<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_home_backend_form" model="ir.ui.view">
            <field name="name">home.backend.form</field>
            <field name="model">backend.home</field>
            <field name="arch" type="xml">
                <form string="Home Backend">
                    <header>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group name="home" string="Home description">
                            <field name="comment"/>
                        </group>
                        <group name="home" string="Home Configuration">
                            <field name="type_ids">
                                <tree create="bottom" editable="bottom">
                                    <field name="image" options="{'size':[128,128]}" widget="image"/>
                                    <field name="name"/>
                                    <field name="type_id" widget="many2one_clickable"/>
                                </tree>
                            </field>
                        </group>
                        <group name="connector_configuration" string="Connector Configuration">
                            <field name="connector_ids">
                                <tree create="bottom" editable="bottom">
                                    <field name="image" options="{'size':[128,128]}" widget="image"/>
                                    <field name="name"/>
                                    <field name="connector_id" widget="many2one_clickable"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_home_backend_tree" model="ir.ui.view">
            <field name="name">home.backend.tree</field>
            <field name="model">home.backend</field>
            <field name="arch" type="xml">
                <tree string="Home Backend">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_home_backend" model="ir.actions.act_window">
            <field name="name">Home Backends</field>
            <field name="res_model">home.backend</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_home_backend_tree"/>
        </record>

        <menuitem id="menu_home_backend_root"
                  parent="connector.menu_connector_root"
                  name="Magento"
                  sequence="10"
                  groups="connector.group_connector_manager"/>

        <menuitem id="menu_home_backend"
                  name="Backend Home"
                  parent="menu_home_backend_root"
                  action="action_home_backend"/>
    </data>
</openerp>